{
  "compilerOptions": {
    "noEmit": true,
    "outDir": "./dist/lib",
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["es6", "dom"],
    "sourceMap": false,
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true
  },
  "include": ["./src", "./test", "./scripts"]
}
